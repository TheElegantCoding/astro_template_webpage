---
import Show from '@global/component/show.astro';

import type { OpenGraphProfileType } from '@global/type/open_graph_type';

type Props = OpenGraphProfileType;

const {
  firstName,
  gender,
  lastName,
  username
} = Astro.props;
---
<Show when={firstName}>
  <meta
    content={firstName}
    property='profile:firts_name'
  />
</Show>
<Show when={lastName}>
  <meta
    content={lastName}
    property='profile:last_name'
  />
</Show>
<Show when={username}>
  <meta
    content={username}
    property='profile:username'
  />
</Show>
<Show when={gender}>
  <meta
    content={gender}
    property='profile:gender'
  />
</Show>