---
import { siteConfiguration } from '@global/configuration/site_configuration';
import { removeTrailingSlash } from '@global/util/link';

const baseUrl = removeTrailingSlash(Astro.site as URL);
---
<link
  rel='icon'
  sizes='96x96'
  type='image/png'
  href={`${baseUrl}/asset/favicon/favicon-96x96.png`}
/>
<link
  rel='icon'
  type='image/svg+xml'
  href={`${baseUrl}/asset/favicon/favicon.svg`}
/>
<link
  rel='shortcut icon'
  href={`${baseUrl}/asset/favicon/favicon.ico`}
/>
<link
  sizes='180x180'
  rel='apple-touch-icon'
  href={`${baseUrl}/asset/favicon/apple-touch-icon.png`}
/>
<link
  rel='manifest'
  href={`${baseUrl}/asset/favicon/site.webmanifest`}
/>
<meta
  name='apple-mobile-web-app-title'
  content={siteConfiguration.siteName}
/>