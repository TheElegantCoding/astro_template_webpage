---
import { siteConfiguration } from '@global/configuration/site_configuration';
import { BASE_URL } from '@global/constant/base';

type Props =
{
  title: string;
  image: string;
  locale: string;
  description: string;
  type?: 'website' | 'article';
};

const {
  description,
  image,
  locale,
  title,
  type = 'website'
} = Astro.props;

const { siteName } = siteConfiguration;
---
<meta
  property='og:type'
  content={type}
/>
<meta
  property='og:url'
  content={BASE_URL}
/>
<meta
  property='og:title'
  content={title}
/>
<meta
  property='og:image'
  content={`${BASE_URL}${image}`}
/>
<meta
  property='og:description'
  content={description}
/>
<meta
  property='og:site_name'
  content={siteName}
/>
<meta
  property='og:locale'
  content={locale}
/>
<meta
  property='og:image:width'
  content='1200'
/>
<meta
  property='og:image:height'
  content='630'
/>
<meta
  name='twitter:card'
  content='summary'
/>
<meta
  name='twitter:url'
  content={BASE_URL}
/>
<meta
  name='twitter:title'
  content={title}
/>
<meta
  name='twitter:description'
  content={description}
/>
<meta
  name='twitter:image'
  content={`${BASE_URL}${image}`}
/>